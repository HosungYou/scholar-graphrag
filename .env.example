# ======================================
# Backend Environment Variables (.env)
# ======================================

# Database (Supabase PostgreSQL with pgvector)
# Get connection string from: Supabase Dashboard > Project Settings > Database > Connection string > URI
DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# LLM Providers (at least one required)
ANTHROPIC_API_KEY=sk-ant-your-api-key
OPENAI_API_KEY=sk-your-api-key
GOOGLE_API_KEY=your-google-api-key

# Default LLM Configuration
DEFAULT_LLM_PROVIDER=anthropic
DEFAULT_LLM_MODEL=claude-3-5-haiku-20241022

# Azure OpenAI Embedding
AZURE_OPENAI_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=scholarag-text-embedding-3-large

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=3072

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,https://scholarag-graph.vercel.app
FRONTEND_URL=http://localhost:3000

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Debug Mode (set to false in production)
DEBUG=false

# Supabase Auth
# Get from: Supabase Dashboard > Project Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ======================================
# External API Integrations
# ======================================

# Semantic Scholar API (optional - for higher rate limits)
# Get from: https://www.semanticscholar.org/product/api
SEMANTIC_SCHOLAR_API_KEY=

# OpenAlex (optional email for polite pool - higher rate limits)
# More info: https://docs.openalex.org/how-to-use-the-api/rate-limits-and-authentication
OPENALEX_EMAIL=your-email@example.com

# Zotero API (optional - can also be provided per-request)
# Get from: https://www.zotero.org/settings/keys
ZOTERO_API_KEY=
ZOTERO_USER_ID=

